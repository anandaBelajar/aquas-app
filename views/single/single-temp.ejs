<%- include('partials/header') %>
    <div class="container body">

        <div class="main_container">
            <div class="col-md-3 left_col">
                <%- include('partials/sidebar-menu') %>
            </div>

            <%- include('partials/top-navigation') %>
                <div class="right_col" role="main">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>Detail Suhu Air</h3>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--Start Temp row container-->
                    <div class="row temp_info_container">
                        <div class="col-md-12 col-sm-12 ">
                            <div class="dashboard_graph">

                                <div class="row x_title">
                                    <div class="col-md-6">
                                        <h3>Suhu Air</h3>
                                    </div>
                                </div>

                                <div class="col-md-9 col-sm-9 ">
                                    <canvas id="aquas_temp_chart"></canvas>
                                </div>
                                <div class="col-md-3 col-sm-3  bg-white">
                                    <div class="x_title">
                                        <h2>Suhu Air Realtime</h2>
                                        <div class="clearfix"></div>
                                    </div>

                                    <div class="col-md-12 col-sm-12 ">
                                        <div>
                                            <div class="current_value_wrapper">
                                                <span id="aquas_temp_current_value" class='aquas_current_value'></span>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-center aquas_button_container">
                                            <button type="button" id="aquas_temp_detail" class="btn btn-primary aquas-button">Detail Suhu Air</button>
                                        </div>
                                    </div>
                                </div>


                                <div class="clearfix"></div>
                            </div>
                        </div>

                    </div>
                    <!--End Temp row container-->
                    <br />
                    <!--Start Temp table container-->
                    <div class="row temp_data_table_container">
                        <div class="col-md-12 col-sm-12 ">
                            <div class="dashboard_graph">

                                <div class="row x_title">
                                    <div class="col-md-6">
                                        <h3>Tabel Data Cahaya</h3>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 ">
                                    <% if (items.length > 0) {%>
                                        <table id="aquas_temp_data_table" class="table table-striped table-bordered" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Data</th>
                                                    <th>Waktu</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% items.forEach((item, index) => { %>
                                                    <tr>
                                                        <td>
                                                            <%= item.data %>
                                                        </td>
                                                        <td>
                                                            <%= item.waktu %>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                        <% } else { %>
                                            <p class="text-center">No data found</p>
                                            <% } %>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <!--End Temp table container-->
                </div>

                <%- include('partials/footer') %>
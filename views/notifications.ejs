<%- include('partials/header') %>
    <div class="container body">

        <div class="main_container">
            <div class="col-md-3 left_col">
                <%- include('partials/sidebar-menu') %>
            </div>

            <%- include('partials/top-navigation') %>

                <!-- page content -->
                <div class="right_col" role="main">
                    <!-- top tiles -->
                    <div class="page-title">
                        <div class="title_left">
                            <h3>Daftar Notifikasi</h3>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row light_data_table_container">
                        <div class="col-md-12 col-sm-12 ">
                            <div class="dashboard_graph">


                                <div class="col-md-12 col-sm-12 ">
                                    <% if (items.length > 0) {%>
                                        <table id="admins_data_table" class="table table-striped table-bordered" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Jenis</th>
                                                    <th>Tanggal</th>
                                                    <th>Deskripsi</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% items.forEach((item, index) => { %>
                                                    <tr data-id="<%= item.id %>">
                                                        <td>
                                                            <span class="font-weight-bold"><%= item.subject %> <%if(item.status == 'read'){%><i class="fa fa-check-circle"></i><%} else {%><i class="fa fa-exclamation-circle"></i><%}%></span>
                                                        </td>
                                                        <td>
                                                            <%
                                                                var raw_date = String(item.tanggal),
                                                                    date = raw_date.split(" ")
            
                                                            %>
                                                                <span>
                                                            <%= date[2]; %>
                                                            <%= date[1]; %>
                                                            <%= date[3]; %>, 
                                                        </span>
                                                                <span>Pukul : 
                                                                <%= item.waktu %>
                                                                </span>
                                                        </td>
                                                        <td>
                                                            <span class="notification-description"><%var notification_desc = String(item.deskripsi) %><%= notification_desc.substring(0, 50)  %> ... <a href="notification-detail/<%= item.id %>" class="btn-primary btn-sm">Baca</a></span>

                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                        <% } else { %>
                                            <p class="text-center">No data found</p>
                                            <% } %>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <!-- /top tiles -->

                </div>
                <!-- /page content -->

                <%- include('partials/footer') %>